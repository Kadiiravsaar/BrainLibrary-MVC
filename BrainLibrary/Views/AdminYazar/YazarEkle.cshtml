@model BrainLibrary.Models.Entity.Yazarlar
@{
    ViewBag.Title = "YazarEkle";
    Layout = "~/Views/Shared/AdminSide.cshtml";
}
<h2 style="text-align:center;font-family:Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif; ">Yazar Ekleme Paneli</h2>
<br />

<form method="post" class="form-group ms-2">
    <div></div>
    <div>
        <label class="mt-2">Yazar Adı</label>
        @Html.TextBoxFor(y => y.Ad, new { @class = "form-control" })
    </div>
    <div>
        <label class="mt-2">Yazar Soyadı</label>
        @Html.TextBoxFor(y => y.Soyad, new { @class = "form-control" })
    </div>
    <div>
        <label class="mt-2">Detay</label>
        @Html.TextAreaFor(y => y.Detay, new { @class = "form-control" })
    </div>
    <div class="mt-2">
        <button class="btn " style="background-color: #393E46; color:#fff;">Yazar Ekle</button>
    </div>
</form>


