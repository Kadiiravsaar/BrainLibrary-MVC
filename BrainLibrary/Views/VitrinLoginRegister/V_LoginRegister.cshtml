
@{
    Layout = null;
}


<!doctype html>
<html lang="tr-TR">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="~/library/css/all.css" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link href="~/library/css/bootstrap.css" rel="stylesheet">
    <link href="~/library/css/style.css" rel="stylesheet">
    <link href="~/library/css/login.css" rel="stylesheet">


    <title>BrainLibrary</title>
</head>
<body>
    <header>
        <div class="top-menu py-3">
            <div class="container">
                <div class="row">
                    <div class="col-sm-12 col-md-6 col-lg-6">
                        <ul class="social-icons">
                            <li class="me-4"><a href="#"><i class="fab fa-facebook-f f-icon"></i></a></li>
                            <li class="me-4"><a href="#"><i class="fab fa-twitter t-icon"></i></a></li>
                            <li><a href="#"><i class="fab fa-instagram i-icon"></i></a></li>
                        </ul>
                    </div>
                    <div class="col-sm-12 col-md-6 col-lg-6">
                        <ul class="user-login-control">
                            <li class="me-4"><a href="/AdminLogin/AdmLgn/" class="text-uppercase">Admin</a></li>
                            <li class="me-4"><a href="/VitrinLoginRegister/V_login" class="text-uppercase">giriş yap</a></li>
                            <li><a href="/VitrinLoginRegister/V_register" class="text-uppercase">kayıt ol</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <nav class="navbar navbar-expand-lg  py-4" id="navbar">
            <div class="container">
                <a class="navbar-brand" href="/VitrinAnasayfa/V_anasayfa">BrainLbirary</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navbarNavDropdown">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/VitrinAnasayfa/V_anasayfa">Anasayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/VitrinAnasayfa/V_kitaplar">Kitaplar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/VitrinAnasayfa/V_kategoriler">Kategoriler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/VitrinAnasayfa/V_iletisim">İletişim</a>
                        </li>


                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div>
        @RenderBody()
    </div>







    <script src="~/library/js/bootstrap.bundle.min.js"></script>

    <script>
        window.onscroll = function() {myFunction()};

        var navbar = document.getElementById("navbar");
        var sticky = navbar.offsetTop;

        function myFunction() {
          if (window.pageYOffset >= sticky) {
            navbar.classList.add("sticky")
          } else {
            navbar.classList.remove("sticky");
          }
        }
    </script>
</body>
</html>