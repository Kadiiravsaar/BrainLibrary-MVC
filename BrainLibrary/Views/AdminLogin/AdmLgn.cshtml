<body>

    <h1>Admin Giriş Formu</h1>
    <a href="/VitrinAnasayfa/V_anasayfa/"><h3 style="text-align:center;">Vitrine dönmek için tıklayınız.</h3></a> 
    
    <div class=" w3l-login-form">


        @using (Html.BeginForm("AdmLgn", "AdminLogin", FormMethod.Post))
        {

            <div class=" w3l-form-group">
                <label>Kullanıcı Adı:</label>
                <div class="group">
                    <i class="fas fa-user"></i>
                    <input type="text" class="form-control" name="Kullanici" placeholder="Kullanıcı" required="required" />
                </div>
            </div>
            <div class=" w3l-form-group">
                <label>Şifre:</label>
                <div class="group">
                    <i class="fas fa-unlock"></i>
                    <input type="password" class="form-control" name="Sifre" placeholder="Şifre" required="required" />
                </div>
            </div>

            <button type="submit" style="margin-top:10px;">Giriş</button>

        }





    </div>

</body>

